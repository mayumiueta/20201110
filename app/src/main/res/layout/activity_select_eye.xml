<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectEyeActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="445dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="445dp"
        android:text="どちらの眼を測定しますか？"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.692"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/left_eye_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="360dp"
        android:layout_marginTop="92dp"
        android:text="左眼"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:background="@drawable/refine_button_selector"/>

    <Button
        android:id="@+id/right_eye_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="327dp"
        android:layout_marginTop="92dp"
        android:text="右眼"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/left_eye_button"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:background="@drawable/refine_button_selector"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:text="遠見と近見のどちらの視力を測定しますか？"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/left_eye_button" />

    <Button
        android:id="@+id/far_vision_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="328dp"
        android:layout_marginTop="100dp"
        android:text="遠見視力"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:background="@drawable/refine_button_selector"/>

    <Button
        android:id="@+id/near_vision_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="284dp"
        android:layout_marginTop="100dp"
        android:text="近見視力"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/far_vision_button"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:background="@drawable/refine_button_selector"/>

    <Button
        android:id="@+id/Start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="測定開始"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/far_vision_button"
        android:background="@drawable/refine_button_selector"/>
</android.support.constraint.ConstraintLayout>